{
    "compilerOptions": {
      "target": "ESNext",
      "allowJs": false,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "jsx": "react-jsx",
      "declaration": true,
      "outDir": "./lib",
      "types": ["node", "react"]
    },
    "include": ["index.ts",], 
    "exclude": ["node_modules", "dist"],
  }